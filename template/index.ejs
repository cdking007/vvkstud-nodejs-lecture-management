<%- include('includes/head.ejs') %>
<!-- navbar -->
</head>
<body>
    <div class="main-container">
        <!-- navigation start -->
        <%- include('includes/nav.ejs') %>
        <!-- navigation end -->
        <div class="row m-2">
          <% if(posts.length === 0){ %>
              <h1 class="txt-primary">No Lectures post found</h1>
              
          <% }else{ %>
            <% posts.forEach(post=>{ %>
                <!-- single card start -->
                <div class="col-sm-12 col-md-6 col-lg-3 mt-2">
                  <div class="card bg-secondary cst-card">
                    <div class="card-header">
                      <h5 class="txt-primary"><%= post.title %></h5>
                    </div>
                    <div class="card-body">
                      <ul class="cst-list-group m-0">
                        <li class="cst-list-group-item">Date: <%= post.date.toDateString() %></li>
                        <li class="cst-list-group-item">Class: Div-<%= post.div %></li>
                        <li class="cst-list-group-item">subjects: <%= post.subjects %></li>
                      </ul>
                    </div>
                    <div class="card-footer">
                      <a href="/lecture/<%= post._id %>" class="btn btn-block cst-btn"
                        >Watch it now</a
                      >
                    </div>
                  </div>
                </div>
                <!-- single card end-->
            <% }) %>
          <% } %>
          </div>
    </div>
    <script src="/script/nav.js"></script>
</body>