<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
<body>
    <%- include('../includes/nav.ejs') %>

    <div class="main-container">
        <div class="container card mt-2">
            <h1>Users List</h1>
            
            <% if(errorMessage){ %>
                <div class="alert alert-danger" role="alert">    
                    <%= errorMessage %>
                  </div>
            <% } %>
            <% if(successMessage){ %>
                <div class="alert alert-success" role="alert">
                    <%= successMessage %>
                  </div>
            <% } %>
            <table id="myTable" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>username</th>
                    <th>email</th>
                    <th>status</th>
                    <th>role</th>
                    <th>Delete</th>
                    <th>Edit</th>
                    <th>Approve</th>
                    <th>Reject</th>
                </tr>
            </thead>
            <tbody>
                <% if(users.length === 0){ %>
                    <td>No User found</td>
                <% }else{ %>
                    <% users.forEach(user=>{ %>
                        <tr>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.status %></td>
                            <td><%= user.role %></td>
                            <td> <form action="/admin/user/delete" method="POST">
                                <input type="hidden" name="userid" value="<%= user._id %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn  btn-danger">Delete</button>
                            </form></td>
                            <td> <a href="/admin/user/edit/<%= user._id %>" class="btn btn-success">Edit</a></td>
                            <td> <form action="/admin/user/approve" method="POST">
                                <input type="hidden" name="userid" value="<%= user._id %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn  btn-info" <%= user.status === 'approve'?"disabled":""%> >Approve</button>
                            </form></td>
                            <td> <form action="/admin/user/reject" method="POST">
                                <input type="hidden" name="userid" value="<%= user._id %>">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <button class="btn  btn-warning" <%= user.status === 'rejected'?"disabled":""%> >Reject</button>
                            </form></td>
                          </tr>
                    <% }) %>
                <% } %>
            </tbody>
            <tfoot>
                <tr>
                    <th>username</th>
                    <th>email</th>
                    <th>status</th>
                    <th>role</th>
                    <th>Delete</th>
                    <th>Edit</th>
                    <th>Approve</th>
                    <th>Reject</th>
                </tr>
            </tfoot>
        </table>
        </div>
        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
    $('#myTable').DataTable();
} );
    </script>
    <script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
</body>
</html>